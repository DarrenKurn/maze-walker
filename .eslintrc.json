{
  "env": {
    "browser": true,
    "amd": true
  },
  "globals": {},
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    //"project": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },

  "rules": {
    "no-eval": "error",

    "no-var": "warn",
    "curly": "warn",
    "no-redeclare": "warn",

    "@typescript-eslint/indent": ["off", "tab"],
    "@typescript-eslint/no-unused-vars": ["warn", {"args": "none"}]
  }
}